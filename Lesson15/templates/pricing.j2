{% extends "_base.j2" %}
{% block title %}價格{% endblock %}

{% block head %} {{super()}} {% endblock%}

{% block main %}
<div class="container">
    <div class="row">

        {% for item in items_on_page%}
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>

        {% endfor %}
    </div>

</div>


<div class="container d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {% if page > 1%}
            <li class="page-item"><a class="page-link" href="{{ url_for('product',page=page-1) }}">上一頁</a></li>
            {% endif %}

            <li class="page-item"><a class="page-link" href="#">{{page}} / {{total_pages}}</a></li>

            {% if page < total_pages %} <li class="page-item"><a class="page-link"
                    href="{{ url_for('product', page=page+1) }}">下一頁</a></li>
                {% endif %}
        </ul>
    </nav>
</div>

{% endblock %}